{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": {
    "text": "Overtourism in the World",
    "fontSize": 30,
    "fontWeight": "bold"
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "lightblue", "strokeWidth": 0.5}
    },
    {"data": {"sphere": true}, "mark": {"type": "geoshape", "fill": "#a9def9"}},
    {
      "data": {
        "url": "https://raw.githubusercontent.com/AdittiGupta/FIT3179_A2_/refs/heads/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/AdittiGupta/FIT3179_A2_/refs/heads/main/Overtourism.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Tourists",
          "type": "quantitative",
          "title": "Number of Tourists",
          "scale": {"domain": [5000000, 35000000], "range": [10, 100]}
        },
        "color": {
          "field": "Locals",
          "type": "quantitative",
          "title": "Number of Locals",
          "scale": {"domain": [1000000, 8000000], "scheme": "purples"}
        },
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "Tourists", "title": "Number of Tourists"},
          {"field": "Locals", "title": "Number of Locals"},
          {"field": "Longitude", "title": "Longitude"},
          {"field": "Latitude", "title": "Latitude"}
        ]
      }
    }
  ],
  "config": {}
}

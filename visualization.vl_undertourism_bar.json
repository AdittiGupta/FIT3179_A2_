{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Undertourism v/s Locals",
  "data": {
    "url": "https://raw.githubusercontent.com/AdittiGupta/FIT3179_A2_/refs/heads/main/Undertourism.csv"
  },
  "params": [
    {
      "name": "minTourists",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 12000000,
        "step": 1000000,
        "name": "Minimum Number of Tourists: "
      }
    },
    {
      "name": "minLocals",
      "value": 10000000,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 150000000,
        "step": 1000000,
        "name": "Minimum Number of Locals: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Tourists > minTourists"},
    {"filter": "datum.Locals > minLocals"}
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {"field": "Country", "type": "nominal", "title": "Country"},
        "y": {
          "field": "Tourists",
          "type": "quantitative",
          "title": "Number of Tourists",
          "axis": {"titleColor": "#3182bd"}
        },
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "Tourists", "title": "Number of Tourists"}
        ],
        "color": {"value": "#3182bd"}
      }
    },
    {
      "mark": {"type": "line", "point": true, "color": "#de2d26"},
      "encoding": {
        "x": {"field": "Country", "type": "nominal"},
        "y": {
          "field": "Locals",
          "type": "quantitative",
          "title": "Number of Locals",
          "axis": {"titleColor": "#de2d26"},
          "scale": {"zero": false}
        },
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "Locals", "title": "Number of Locals"}
        ]
      }
    }
  ],
  "resolve": {"scale": {"y": "independent"}},
  "config": {}
}
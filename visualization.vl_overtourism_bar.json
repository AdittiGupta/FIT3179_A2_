{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": {
    "text": "Overtourism Percentage",
    "fontSize": 30,
    "fontWeight": "bold"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/AdittiGupta/FIT3179_A2_/refs/heads/main/Overtourism%20Percentage.csv"
  },
  "params": [
    {
      "name": "minPercentage",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 15,
        "step": 1,
        "name": "Locals outnumbered by Tourists Percentage: "
      }
    }
  ],
  "transform": [{"filter": "datum.Percentage > minPercentage"}],
  "layer": [
    {
      "mark": {"type": "bar"},
      "encoding": {
        "x": {
          "field": "Country",
          "type": "nominal",
          "title": "Country",
          "sort": "-y"
        },
        "y": {
          "field": "Percentage",
          "type": "quantitative",
          "title": "Percentage"
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {"scheme": "set3"}
        },
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "Percentage", "title": "Percentage"}
        ]
      }
    },
    {
      "mark": {"type": "text", "dy": -5},
      "encoding": {
        "x": {"field": "Country", "type": "nominal"},
        "y": {"field": "Percentage", "type": "quantitative"},
        "text": {"field": "Percentage"},
        "color": {"value": "black"}
      }
    }
  ],
  "config": {}
}

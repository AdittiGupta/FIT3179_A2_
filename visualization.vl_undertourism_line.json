{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Undertourism Percentage",
  "data": {
    "url": "https://raw.githubusercontent.com/AdittiGupta/FIT3179_A2_/refs/heads/main/Undertourism%20Percentage.csv"
  },
  "params": [
    {
      "name": "minPercentage",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 0.2,
        "step": 0.003,
        "name": "Locals outnumbered by Tourists Percentage: "
      }
    }
  ],
  "transform": [{"filter": "datum.Percentage > minPercentage"}],
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "Country",
          "type": "nominal",
          "title": "Country",
          "sort": null
        },
        "y": {
          "field": "Percentage",
          "type": "quantitative",
          "title": "Percentage"
        },
        "size": {
          "field": "Percentage",
          "type": "quantitative",
          "title": "Percentage Size"
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {"scheme": "paired"}
        },
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "Percentage", "title": "Percentage"}
        ]
      }
    },
    {
      "mark": {"type": "text", "dy": -15},
      "encoding": {
        "x": {"field": "Country", "type": "nominal"},
        "y": {"field": "Percentage", "type": "quantitative"},
        "text": {"field": "Percentage"},
        "color": {"value": "black"}
      }
    }
  ],
  "config": {}
}